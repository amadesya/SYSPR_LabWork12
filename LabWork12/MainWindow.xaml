<Window x:Class="LabWork12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork12"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">
    <StackPanel>
        <Label Content="Введите часть имени файла" HorizontalAlignment="Center"/>
        <TextBox x:Name="particalNameLabel"/>
        <Button Content="Выбрать каталог" Name="catalogButton" Click="catalogButton_Click"/>
        <Label HorizontalAlignment="Center" x:Name="pathLabel"/>
        <Button Content="Найти" Name="findButton" Click="findButton_Click"/>
        <DataGrid x:Name="fileDataGrid"/>
    </StackPanel>
</Window>
